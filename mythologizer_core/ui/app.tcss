Button {
    background: blue;
}

Button:focus {
    background: rgb(53, 53, 255);
}

Button:can-focus:hover {
    background: rgb(53, 53, 255);
}

Screen {
    background: blue;
}

SecondaryHeader Static {
    padding: 0;
}

SecondaryHeader {
    border: tall grey;
    height: auto;
}

Body {
    border: tall grey;
    width: 100%;
    height: 1fr;
    align: center middle;
}

Menu {
    align: center middle;
    width: 100%;
    height: 1fr;
}

Footer {
    border: tall grey;
    width: 100%;
    height: auto;
    padding-top: 1;
    padding-bottom: 1;
